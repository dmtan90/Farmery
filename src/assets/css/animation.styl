hoverLine(color)
  position relative
  display inline-block
  &::after
    position absolute
    bottom 0
    left 0
    visibility hidden
    width 100%
    height 2px
    background-color color
    content ""
		transform scaleX(0)
		transition .4s
  &:hover
    text-decoration none

  &:hover::after,
  &:active::after
    visibility visible
		transform scaleX(1)

hoverAnchor(anchorColor=#999,bottomWidth=.0625rem)
  position relative
  border-bottom-style dotted
  border-bottom-color lighten(anchorColor, 20%)
  border-bottom-width bottomWidth
  background transparent
  text-decoration none
  white-space normal
  &:after
    position absolute
    bottom -.0625rem
    left 100%
    width 0
    border-bottom .0625rem solid anchorColor
    content ""
    transition width 350ms, left 350ms
  &:hover:after
    left 0
    width 100%
    outline 0
    text-decoration underline
    transition width 350ms

